<%-include("navbar.ejs")%>


<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">Update Slider Image And Information</h3>
        <div class="tab-content mt-3">
            <!-- Mobile Number -->
            <div >
                <form action="/admin/update_home_slider" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">New Slider Image 1</label>
                        <div class="input-group">
                            <input type="file" class="form-control" name="slider_image1" placeholder="select image" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Slider Heading</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="slider_text1" placeholder="Enter Heading " required>
                        </div>
                    <div class="mb-3">
                        <label class="form-label">New Slider Sub Heading</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="slider_text2" placeholder="Enter sub Heading" required>
                        </div>
                    </div>

           
                    <button type="submit" class="btn btn-primary w-100">Add slider</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <table class="table table-bordered">
            <tr>
                <th>Action</th>
                <th>Sr.No.</th>
                <th>Slider image 1</th>
                <th>Slider Heading</th>
                <th>Slider Sub Heading</th>
                
            </tr>
            <%data.map((row,i)=>{ %>
                
                <tr>
                    <td>
                        <a href="/admin/edit_slider/<%-row.slider_id%>"><button class="btn btn-primary text-light"><i class="fa-solid fa-pen-to-square"></i></button></a>
                        <a href="/admin/delete_slider/<%-row.slider_id%>"><button class="btn btn-danger text-light"><i class="fa-solid fa-trash"></i></button></a>
                      </td>
                    <td><%-i+1%></td>
                    <td>
                        <img src="/uploads/<%-row.slider_image1%>" alt="" height="50px">
                    </td>
                    <td><%-row.slider_text1%></td>
                    <td><%-row.slider_text2%></td>
                </tr>

            <% }) %>
    </table>
</div>

<%-include("footer.ejs")%>