<%-include("navbar.ejs")%>


<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">Update About Image And Information</h3>
        <div class="tab-content mt-3">
            <!-- Mobile Number -->
            <div >
                <form action="/admin/update_home_About" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">New About Image 1</label>
                        <div class="input-group">
                            <input type="file" class="form-control" name="About_image1" placeholder="select image" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Heading 1</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="About_text1" placeholder="Enter About Text" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Sub heading 1</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="sub_heding1" placeholder="Enter Text" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">New About Image 2</label>
                        <div class="input-group">
                            <input type="file" class="form-control" name="About_image2" placeholder="select image" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Heading 2</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="About_text2" placeholder="Enter About Text" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Sub Heading 2</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="sub_heding2" placeholder="Enter Text" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">New About Image 3</label>
                        <div class="input-group">
                            <input type="file" class="form-control" name="About_image3" placeholder="select image" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New text 3</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="About_text3" placeholder="Enter About Text" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Sub Heading 3</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="sub_heding3" placeholder="Enter Text" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Update About</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <table class="table table-bordered">
            <tr>
                <th>Sr.No.</th>
                <th>About image 1</th>
                <th>Heading 1</th>
                <th>Sub Heading 1</th>
                <th>About image 2</th>
                <th>Heading 2</th>
                <th>Sub Heading 2</th>
                <th>About image 3</th>
                <th>Heading 3</th>
                <th>Sub Heading 3</th>
                
            </tr>
            <%data.map((row,i)=>{ %>
                
                <tr>
                    <td><%-i+1%></td>
                    <td>
                        <img src="/uploads/<%-row.About_image1%>" alt="" height="50px">
                    </td>
                    <td><%-row.About_text1%></td>
                    <td><%-row.sub_heding1%></td>
                    <td>
                        <img src="/uploads/<%-row.About_image2%>" alt="" height="50px">
                    </td>
                    <td><%-row.About_text2%></td>
                    <td><%-row.sub_heding2%></td>
                    <td>
                        <img src="/uploads/<%-row.About_image3%>" alt="" height="50px">
                    </td>
                    <td><%-row.About_text3%></td>
                    <td><%-row.sub_heding3%></td>
                </tr>

            <% }) %>
    </table>
</div>

<%-include("footer.ejs")%>