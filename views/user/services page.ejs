<%-include("Navbar.ejs")%>

<div class="about_banner" >
  <img src="user_assets/images/slideB.jpg" class="d-block" alt="Slide 2 ">
  <div class="carousel-caption d-md-block">
      <h2 class="text">Explore Our Services</h2>
      <p class="text">We offer high-quality Services for your helth.</p>
  </div>
</div>

  <!-- Header Section -->
  <div class="header-banner" data-aos="fade-down">
    <div class="container">
      <h2 class="fw-bold text-success">Children's Eye Hospital Services</h2>
      <p class="fs-5">We provide world-class eye care services for children with personalized attention and cutting-edge treatments.</p>
    </div>
  </div>

  <!-- Services Section -->
  <section class="container ">
    <h2 class="text-center mb-4" data-aos="fade-in">Our Eye Care Services</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <!-- Service 1 -->
      <div class="col" data-aos="fade-right">
        <div class="card service-card shadow-lg">
          <div class="card-body text-center">
            <div class="service-icon mb-3">
              <i class="bi bi-eye"></i>
            </div>
